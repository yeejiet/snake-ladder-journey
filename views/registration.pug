extends layout

block content
  .registration.m-sm-5
    .row.justify-content-center
      .col-sm-3 

      .registration-box.box.col-sm-6.border.border-5.p-3.p-sm-4.align-items-center
        h1.fw-4.mt-3.text-center= title

        if errorMessage
          .alert.alert-danger(role="alert")
            = errorMessage
        
        #registration-form.p-3
          form(action="/register" method="POST")
            .form-group.row.mb-3
              label.col-12.text-start.col-form-label(for="username") Username: 
              .col-12
                input#username.form-control(type="text" name="username" placeholder="username" required class=(field === 'username' ? 'is-invalid' : ''))
                p#username-error.mt-2.err-msg

            .form-group.row.mb-3
              label.col-12.text-start.col-form-label(for="email") Email: 
              .col-12
                input#email.form-control(type="text" name="email" placeholder="email" required class=(field === 'email' ? 'is-invalid' : ''))
                p#email-error.mt-2.err-msg
            
            .form-group.row.mb-3
              label.col-12.text-start.col-form-label(for="password") Password:
              .col-12.input-group
                input#password.form-control(type="password" name="password" placeholder="password" required class=(field === 'password' ? 'is-invalid' : ''))
                .input-group-append
                  span#togglePassword(class="input-group-text") 
                    i(class="fa fa-eye")
                p#password-error.mt-2.err-msg

            .form-group.row.mt-5
              .col-sm-6.text-center
                button#register-button.btn.custom-btn.col-12.m-1(type="submit") REGISTER
              .col-sm-6
                button.btn.custom-btn.col-12.m-1(type="reset") RESET

            .form-group.row.mb-1
              .col-12.text-center
                p Already have an account? 
                  a(href='login') Login
      .col-sm-3
