extends layout

block content
  .login.m-5
    .row.justify-content-center
      .col-3

      .login-box.box.col-6.p-4.align-items-center
        h1.fw-4.mt-3.text-center= title
        
        .login-form.p-3
          form(action="/login" method="POST")
            .form-group.row.mb-3
              label.col-12.text-start.col-form-label(for="email") Email: 
              .col-12
                input#email.form-control(type="text" name="email" placeholder="email" value=email required)
                p.mt-2.err-msg(style="color: red") #{emailError}

            .form-group.row.mb-3
              label.col-12.text-start.col-form-label(for="password") Password:
              .col-12.input-group
                input#password.form-control(type="password" name="password" placeholder="password" required)
                .input-group-append
                  span#togglePassword(class="input-group-text") 
                    i(class="fa fa-eye")
                p.mt-2.err-msg(style="color: red") #{passwordError}

            .form-group.row.my-5
              .col-12.text-center
                button.btn.custom-btn.col-12(type="submit") LOGIN

            .form-group.row.mb-3
              .col-12.text-center
                p Don't have an account? 
                  a(href='/registration') Register

      .col-3
